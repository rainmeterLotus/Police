<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarTabTextStyle">@style/MenuTextStyle</item>
    </style>
    <!-- 修改actionbar中tab中字体样式 -->
    <style name="MenuTextStyle">
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/line_divider</item>
    </style>

    <style name="edittext_style_with_null_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">24dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:drawablePadding">@dimen/activity_padding</item>
        <item name="android:layout_marginTop">@dimen/activity_margin</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="wuye_cm_button">
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/build_login_button</item>
    </style>

    <style name="info_item_tv_style">
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/text_color_9da9b9</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/dimen_6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="info_item_et_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/dimen_6</item>
    </style>

    <style name="info_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="info_item_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_divider</item>
        <item name="android:layout_height">1dip</item>
    </style>

    <style name="info_item_tv_arrow">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:paddingLeft">@dimen/dimen_8</item>
        <item name="android:drawableRight">@mipmap/arrow_down</item>
        <item name="android:paddingRight">@dimen/dimen_10</item>
    </style>

    <style name="listview_indent_sep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:background">@color/text_color_9da9b9</item>
    </style>
    <!-- popup 弹出dialog 样式 -->
    <style name="popup_dialog_style" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <!-- 通讯录popupwindows 动画 -->
    <style name="ContactAnimationPreview">
        <item name="android:windowEnterAnimation">@anim/anim_popup_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_out</item>
    </style>
</resources>
